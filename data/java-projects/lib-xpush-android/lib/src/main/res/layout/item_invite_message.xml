<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/spacing">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTime"
            style="?android:textAppearanceSmall"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing"
            android:paddingRight="@dimen/spacing"
            android:layout_gravity="center_horizontal"
            android:text="04:31"
            android:textSize="9dip"
            android:singleLine="true"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical" android:id="@+id/bubble" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minHeight="2dp" android:background="@drawable/message_bubble_log">
            <TextView
                android:id="@+id/vMessage"
                android:gravity="center_vertical"
                android:maxWidth="360dip"
                android:autoLink="none"
                android:textColor="@color/white"
                android:padding="4dip"
                android:layout_width="wrap_content" android:layout_height="fill_parent"
                android:layout_gravity="center_vertical" android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
